# Production Environment Configuration
# Copy from .env.example and customize for production

# REQUIRED: OpenAI API Key
OPENAI_API_KEY=sk-prod-key-here

# REQUIRED: API Authentication Keys (comma-separated)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=production-key-1,production-key-2

# Security: Allowed CORS origins
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Optional: IP allowlist (comma-separated CIDRs). Leave empty to disable.
ALLOWED_IP_CIDRS=203.0.113.0/24,198.51.100.10/32

# Environment
ENVIRONMENT=production

# Model Configuration  
OPENAI_MODEL=gpt-4o
TOP_K=5
USE_HUGGINGFACE=true
DATASET_SPLIT=train

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
